/* http://www.colourlovers.com/palette/845780/No_idea */
html 
{
 /* http://www.hicksdesign.co.uk/journal/forcing-scrollbars-now-even-better */

 height: 100%;
 margin-bottom: 1px;
 background-color: #FEFEEB;
 margin-top: 0;
 margin-right: auto;
 margin-bottom: 0;
 margin-left: 44px;
}

.site 
{
 background-color: white;
}

.title 
{
 position: relative;
 padding-top: 18px;
 padding-right: 0;
 padding-bottom: 0;
 padding-left: 0;
 background-color: #FEFEEB;
}

.title a 
{
 position: absolute;
 text-decoration: none;
 font-size: 100%;
 font-weight: bold;
 font-style: italic;
 color: #FF2C2B;
 top: 28px;
 right: 0;
}

#home, #post 
{
 padding-top: 22px;
 border-color: #888;
 border-style: solid;
 border-top-width: 1px;
 border-right-width: 0;
 border-bottom-width: 1px;
 border-left-width: 1px;
}

#home h1 
{
 font-size: 140%;
 font-style: italic;
}

#post h1 
{
 font-size: 180%;
 font-style: italic;
 font-weight: bold;
 margin-bottom: 22px;
 color: #FF2C2B;
}

#post h2, #post h3, #home h1 
{
 color: #489690;
}

#home ul li 
{
 list-style: none;
}

a[href^="http:"], a[href^="mailto:"], a[href^="http:"]:visited, a[href$=".pdf"], a[href$=".doc"], a[href$=".xls"], a[href$=".rss"], a[href$=".rdf"], a[href^="aim:"] 
{
 padding-top: 2px;
 padding-right: 16px;
 padding-bottom: 2px;
 padding-left: 0;
}

h2 
{
 font-size: 140%;
 padding-bottom: 2px;
 border-bottom-color: #489690;
 border-bottom-width: 2px;
 border-bottom-style: dotted;
}

h2, h3 
{
 color: #489690;
}

code 
{
 margin-top: 0;
 margin-right: 2px;
 margin-bottom: 0;
 margin-left: 2px;
 padding-top: 0.06em;
 padding-right: 0.125em;
 padding-bottom: 0.06em;
 padding-left: 0.125em;
 border-color: #403B33;
 border-width: 1px;
 border-style: solid;
}

pre code 
{
 border-style: none;
}

pre 
{
 border-left-color: #FD9945;
 border-left-width: 9px;
 border-left-style: solid;
 margin-left: -49px;
 padding-top: 0;
 padding-right: 0;
 padding-bottom: 0;
 padding-left: 49px;
}

/* tabele */
caption 
{
 text-align: right;
}

li ul 
{
 margin-bottom: 1.5em;
}